{
  "manifest_version": 2,

  "name": "PublishTo.Dev Extension",
  "description": "Schedule publishing for draft posts on Dev.To",
  "version": "0.1",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon-16.png",
    "default_popup": "popup.html"
  },

  "icons": { 
    "16": "icon-16.png",
    "48": "icon-48.png",
   "128": "icon-128.png"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js"]
  },

  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ]
}